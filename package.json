{
  "name": "MavensMate-Desktop",
  "version": "0.0.13-alpha",
  "description": "MavensMate desktop app",
  "author": {
    "name": "Joe Ferraro",
    "email": "ferraro.joseph@gmail.com",
    "url": "https://github.com/joeferraro"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MagisterAmica/MavensMate-Desktop.git"
  },
  "scripts": {
    "reset": "rm -rf app dist yarn.lock node_modules src/main/node_modules package-lock.json src/main/package-lock.json && yarn install",
    "postinstall": "electron-builder install-app-deps",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "build": "yarn compile && electron-builder --publish never",
    "dist": "yarn compile && electron-builder --publish onTagOrDraft"
  },
  "dependencies": {
    "bluebird": "2.9.34",
    "keytar": "4.13.0",
    "mavensmate": "https://github.com/MagisterAmica/MavensMate",
    "nslog": "3.2.0",
    "react": "^0.14.9",
    "react-addons-update": "^15.6.2",
    "react-dom": "^0.14.9",
    "react-redux": "^4.4.10",
    "redux": "^3.7.2",
    "redux-devtools": "^3.5.0",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "redux-thunk": "^1.0.3",
    "source-map-support": "^0.5.13",
    "svg-inline-loader": "^0.8.0",
    "svg-inline-react": "^1.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-do-expressions": "^7.5.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.5.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "electron": "1.7.12",
    "electron-builder": "^21.2.0",
    "electron-webpack": "^2.7.4",
    "fs-extra": "^8.1.0",
    "modclean": "^3.0.0-beta.1",
    "webpack": "^4.39.1"
  },
  "build": {
    "appId": "com.mavens.mavensmate",
    "productName": "MavensMate-Desktop",
    "files": [
      "src/main/resources/**"
    ],
    "linux": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
